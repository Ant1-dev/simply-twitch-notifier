{
  "manifest_version": 3,
  "name": "Twitch Chat Notifier",
  "version": "1.0.0",
  "description": "Get notified when specific keywords appear in Twitch chat",
  "permissions": [
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "*://*.twitch.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Twitch Chat Notifier"
  },
  "web_accessible_resources": [
    {
      "resources": ["sounds/*.mp3"],
      "matches": ["*://*.twitch.tv/*"]
    }
  ]
}
