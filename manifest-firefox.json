{
  "manifest_version": 2,
  "name": "Twitch Chat Notifier",
  "version": "1.0.0",
  "description": "Get notified when specific keywords appear in Twitch chat",
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-chat-notifier@example.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "notifications",
    "storage",
    "*://*.twitch.tv/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Twitch Chat Notifier"
  },
  "web_accessible_resources": ["sounds/*.mp3"]
}